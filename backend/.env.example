# ==================== 对话模型配置 ====================
# 对话模型 API 配置（必需）
OPENAI_API_KEY=your-chat-api-key-here
# OPENAI_API_BASE=https://api.openai.com/v1  # 默认 OpenAI 端点
OPENAI_CHAT_MODEL=gpt-3.5-turbo

# ==================== 嵌入模型配置 ====================
# 嵌入模型配置（可选，未设置时使用对话模型的配置作为回退）
# EMBEDDING_API_KEY=your-embedding-api-key-here  # 如果不同于对话模型
# EMBEDDING_API_BASE=https://api.embedding-provider.com/v1  # 如果不同于对话模型
EMBEDDING_MODEL=text-embedding-ada-002

# ====== 常见配置示例 ======

# 1. 使用同一服务商（推荐）
# 智谱AI (GLM) - 支持对话和嵌入
# OPENAI_API_KEY=your-zhipu-key
# OPENAI_API_BASE=https://open.bigmodel.cn/api/paas/v4
# OPENAI_CHAT_MODEL=glm-4
# EMBEDDING_MODEL=embedding-2

# 2. 混合服务商配置
# DeepSeek（对话） + OpenAI（嵌入）
# OPENAI_API_KEY=your-deepseek-key
# OPENAI_API_BASE=https://api.deepseek.com
# OPENAI_CHAT_MODEL=deepseek-chat
# EMBEDDING_API_KEY=your-openai-key
# EMBEDDING_API_BASE=https://api.openai.com/v1
# EMBEDDING_MODEL=text-embedding-ada-002

# 3. 其他单一服务商

# 月之暗面 (Kimi)
# OPENAI_API_BASE=https://api.moonshot.cn/v1
# OPENAI_CHAT_MODEL=moonshot-v1-8k
# OPENAI_EMBEDDING_MODEL=text-embedding-ada-002

# Together AI
# OPENAI_API_BASE=https://api.together.xyz/v1
# OPENAI_CHAT_MODEL=meta-llama/Llama-2-7b-chat-hf
# OPENAI_EMBEDDING_MODEL=togethercomputer/m2-bert-80M-8k-retrieval

# Groq
# OPENAI_API_BASE=https://api.groq.com/openai/v1
# OPENAI_CHAT_MODEL=llama2-70b-4096
# OPENAI_EMBEDDING_MODEL=text-embedding-ada-002

# Azure OpenAI
# OPENAI_API_BASE=https://your-resource.openai.azure.com
# OPENAI_CHAT_MODEL=gpt-35-turbo
# OPENAI_EMBEDDING_MODEL=text-embedding-ada-002

# 文件处理配置 - 最大文件大小 (MB)
MAX_FILE_SIZE_MB=50.0

# 文本处理配置 - 分块大小和滑动窗口重叠大小
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# 网络爬虫配置
CRAWLER_MAX_DEPTH=3
CRAWLER_DELAY=1.0
CRAWLER_MAX_PAGES=50

# 应用配置
LOG_LEVEL=INFO

# ==================== 数据库配置 ====================
# SQLite 数据库路径（默认）
DATABASE_URL=sqlite:///./data/app.db

# 数据库调试模式（开启后会记录 SQL 查询日志）
DATABASE_DEBUG=false

# 其他数据库配置示例：

# PostgreSQL
# DATABASE_URL=postgresql://user:password@localhost:5432/ai_document_assistant

# MySQL
# DATABASE_URL=mysql://user:password@localhost:3306/ai_document_assistant